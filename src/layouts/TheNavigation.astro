      <a href="/about" aria-current={Astro.url.pathname === '/about' ? 'page' : undefined}>About</a>
    </li>
    <li>
      <a href="/buttons" aria-current={Astro.url.pathname === '/buttons' ? 'page' : undefined}>Buttons</a>
    </li>
