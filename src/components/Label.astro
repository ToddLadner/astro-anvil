---
import { Icon } from 'astro-icon/components';
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<"button"> {
  size?: "xs" | "sm" | "md" | "lg" | "xl";
  text?: string;
  classes?: string;
}

const { 
  size,
  text, 
  classes, 
  ...rest 
  } = Astro.props;
---

<style>
label { font-size: var(--font-size-md); }
</style>

<label>
  <slot/>
  {text}
</label>