---
import type { HTMLAttributes } from 'astro/types';
import { Image } from 'astro:assets';

// Define component props interface
interface Props extends HTMLAttributes<"div"> {
  title: string;
  subtitle?: string;
  content: string[];
  imagePath?: string; // Image filename without path
  altText?: string;
  layout?: 'ltr' | 'rtl' | 'centered';
  classes?: string;
}

// Extract props
const { 
  title, 
  subtitle,
  content,
  imagePath, 
  altText = 'Hero image',
  layout = 'ltr',
  classes,
  ...rest  
} = Astro.props as Props;

// Dynamically import all images from the /src/assets directory
const images = import.meta.glob('@images/*.{jpeg,jpg,png,gif}', { eager: true }) as Record<string, { default: string }>;

// Resolve the image path
const resolvedImagePath = imagePath && images[`/src/img/${imagePath}`]?.default;

const Tag = 'h1'; // Default tag
---

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
    justify-content: center;
  }

  .hero.ltr, .hero.rtl {
    flex-direction: row;
    align-items: center;
  }

  .hero.rtl {
    flex-direction: row-reverse;
  }

  .hero.centered .hero-media {
    margin-bottom: 1rem;
    width: 100%;
    max-height: 500px;
    overflow: hidden;
  }

  .hero.centered .hero-content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .hero-subtitle {
    font-size: 0.75rem;
    margin-bottom: 0.5rem;
    color: #555;
  }

  .hero-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .hero-content {
    font-size: 1.25rem;
  }

  .hero-content p {
    margin: 0.5rem 0;
  }

  .hero-slot {
    margin-top: 1rem;
  }
</style>

<div class:list={['hero', layout, classes]} {...rest}>
  <div class="hero-content-wrapper">
    {subtitle && <div class="hero-subtitle">{subtitle}</div>}
    <Tag class="hero-title">{title}</Tag>
    <div class="hero-content">
      {content.map((paragraph, index) => (
        <p key={index}>{paragraph}</p>
      ))}
    </div>
    <div class="hero-slot">
      <slot></slot>
    </div>
  </div>

  {(layout === 'ltr' || layout === 'rtl') && resolvedImagePath && (
    <div class="hero-media">
      <Image 
        src={resolvedImagePath} 
        width={800} 
        height={600} 
        alt={altText}
      />
    </div>
  )}

  {layout === 'centered' && resolvedImagePath && (
    <div class="hero-media">
      <Image 
        src={resolvedImagePath} 
        width={800} 
        height={600} 
        alt={altText}
      />
    </div>
  )}
</div>
