---
import { Image } from 'astro:assets';
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<"div"> {
  title: string;
  tag?: "h1" | "h2" | "h3";
  subtitle?: string;
  content: string[];
  image?: string;
  video?: string;
  dir?: 'ltr' | 'rtl';
  classes?: string;
}

const { 
  title, 
  tag = 'h1',
  subtitle,
  content,
  image, 
  video, 
  dir = 'ltr',
  classes,
  ...rest  
} = Astro.props;

const Tag = tag;
---

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
   
  }

  .hero[dir="ltr"],
  .hero[dir="rtl"] {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .hero[dir="rtl"] {
    direction: rtl;
  }

  .hero-media {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .hero[dir="ltr"] .hero-media,
  .hero[dir="rtl"] .hero-media {
    width: 50%;
    margin-bottom: 0;
  }

  .hero-content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .hero[dir="ltr"] .hero-content-wrapper,
  .hero[dir="rtl"] .hero-content-wrapper {
    width: 50%;
    align-items: flex-start;
    text-align: left;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: #555;
  }

  .hero-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .hero-content {
    font-size: 1.25rem;
  }

  .hero-content p {
    margin: 0.5rem 0;
  }

  .hero-slot {
    margin-top: 1rem;
  }
</style>

<div class:list={['hero', 'max-sontent-width', classes]} dir={dir} {...rest}>
  {image && !video && (
    <div class="hero-media">
      <img src={image} alt={title} />
    </div>
  )}

  {video && (
    <div class="hero-media">
      <video controls>
        <source src={video} type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
  )}

  <div class="hero-content-wrapper stack">
    {subtitle && <div class="hero-subtitle">{subtitle}</div>}
    <Tag class="hero-title">{title}</Tag>
    
      {content.map((paragraph) => (
        <p>{paragraph}</p>
      ))}
    
      <!-- -->
      <slot />
      <!-- -->
    </div>
  </div>
</div>
