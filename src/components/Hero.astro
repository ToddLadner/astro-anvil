---

interface Props {
  title: string;
  image?: string;
  video?: string;
  dir?: 'ltr' | 'rtl';
}

const { title, image, video, dir = 'ltr' } = Astro.props;
---

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2rem;
    background-color: #f5f5f5;
  }

  .hero[dir="ltr"],
  .hero[dir="rtl"] {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .hero[dir="rtl"] {
    direction: rtl;
  }

  .hero-media {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .hero[dir="ltr"] .hero-media,
  .hero[dir="rtl"] .hero-media {
    width: 50%;
    margin-bottom: 0;
  }

  .hero-content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .hero[dir="ltr"] .hero-content-wrapper,
  .hero[dir="rtl"] .hero-content-wrapper {
    width: 50%;
    align-items: flex-start;
    text-align: left;
  }

  .hero-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .hero-content {
    font-size: 1.25rem;
  }
</style>

<section class="hero" dir={dir}>
  {image && !video && (
    <div class="hero-media">
      <img src={image} alt={title} />
    </div>
  )}

  {video && (
    <div class="hero-media">
      <video controls>
        <source src={video} type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
  )}

  <div class="hero-content-wrapper">
    <h1 class="hero-title">{title}</h1>
    <div class="hero-content">
      <slot />
    </div>
  </div>
</section>
