---
import { Image } from 'astro:assets';
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<"div"> {
  title: string;
  tag?: "h1" | "h2" | "h3";
  subtitle?: string;
  content: string[];
  image?: string;
  video?: string;
  layout?: 'ltr' | 'rtl' | 'centered';
  classes?: string;
}

const { 
  title, 
  tag = 'h1',
  subtitle,
  content,
  image, 
  video, 
  layout = 'ltr',
  classes,
  ...rest  
} = Astro.props;

const Tag = tag;
---

<style>
 .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-block: 2rem;
    justify-content: center;
  }

  .hero.ltr, .hero.rtl {
    flex-direction: row;
    align-items: center;
  }

  :is(.hero.ltr, .hero.rtl) .hero-media {
    width: fit-content;
  }

  .hero.rtl {
    flex-direction: row-reverse;
  }

  .hero.centered .hero-media {
    margin-bottom: 1rem;
    width: 100%;
    max-height: 500px;
    overflow: hidden;
  }

  .hero.centered .hero-content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .hero-subtitle {
    font-size: .75rem;
    margin-bottom: 0.5rem;
    color: #555;
  }

  .hero-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .hero-content {
    font-size: 1.25rem;
  }

  .hero-content p {
    margin: 0.5rem 0;
  }

  .hero-slot {
    margin-top: 1rem;
  }
</style>

<div class:list={['hero', layout, classes]}  {...rest}>
  {(layout === 'ltr' || layout === 'rtl') && image && !video && (
    <div class="hero-media">
      <img src={image} alt={title} />
    </div>
  )}

  {(layout === 'ltr' || layout === 'rtl') && video && (
    <div class="hero-media">
      <video controls>
        <source src={video} type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
  )}

  <div class="hero-content-wrapper">
    {subtitle && <div class="hero-subtitle">{subtitle}</div>}
    <Tag class="hero-title">{title}</Tag>
    <div class="hero-content">
      {content.map((paragraph) => (
        <p>{paragraph}</p>
      ))}
    </div>
    <div class="hero-slot">
      <slot></slot>
    </div>
  </div>

  {layout === 'centered' && (image || video) && (
    <div class="hero-media">
      {image && !video && <img src={image} alt={title} />}
      {video && (
        <video controls>
          <source src={video} type="video/mp4" />
          Your browser does not support the video tag.
        </video>
      )}
    </div>
  )}
</div>
