---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<"h1"> {
  size?: 'font-size-xs' | 'font-size-sm' | 'font-size-md' | 'font-size-lg' | 'font-size-xl';
  color?: 'base' | 'brand';
  text?: string;
  contrast?: boolean;
  classes?: string;
}

const { 
  size = 'md',
  color = 'base',
  text,
  contrast = false,
  classes,
  ...rest
} = Astro.props;
---

<style>
  p {
    text-wrap: pretty;
    font-size: var(--font-size-md);
    overflow-wrap: break-word;
    
    &:last-child { margin-block-end: 0; }
  }
</style>

<p class:list={[size, color, contrast && 'contrast', classes]} {...rest}>
  <slot /> 
  {text}
</p>