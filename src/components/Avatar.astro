---
import type { HTMLAttributes } from 'astro/types';
import { Image } from 'astro:assets';

// Avatar.astro
interface Props extends HTMLAttributes<"div"> {
  src: string;
  alt?: string;
  size?: string;
}

const { 
  src, 
  alt = 'Avatar', 
  size = '100px' 
  } = Astro.props;
---
<style>
  .avatar {
    position: relative;
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    overflow: hidden;
  }

  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .avatar::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    border: 2px solid #fff;
    border-radius: 50%;
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1);
  }
</style>

<div class:list={["avatar"]} style="--size: {size};">
  <img src={src} alt={alt} />
</div>